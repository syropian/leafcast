{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "leafcast",
  "title": "Leafcast",
  "description": "Control your Nanoleaf panels with Raycast! Unofficial extension.",
  "icon": "command-icon.png",
  "author": "syropian",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pair-device",
      "title": "Pair device",
      "description": "Pairs your Nanoleaf device with Raycast",
      "mode": "no-view"
    },
    {
      "name": "reset-brightness",
      "title": "Reset brightness",
      "description": "Resets brightness to 69%",
      "mode": "no-view"
    },
    {
      "name": "on-camera-brightness",
      "title": "Set brightness for on-camera",
      "description": "Sets brightness to 20%",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.10.0",
    "axios": "^1.5.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "deviceAddress",
      "description": "IP address of your Nanoleaf device",
      "type": "textfield",
      "title": "Device IP",
      "required": true
    }
  ]
}
